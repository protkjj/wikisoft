# OpenAI API Key (AI 매칭 정확도 향상)
OPENAI_API_KEY=sk-proj-your-key-here

# API 인증 토큰 (프로덕션 필수)
# 관리자 API (/api/learn/*) 보호용
API_TOKEN=your-secret-token-here

# Redis (배치 처리용)
REDIS_URL=redis://localhost:6379/0

# 세션 설정
MAX_SESSIONS=50
SESSION_TIMEOUT_MINUTES=120

# CORS 허용 Origins (쉼표로 구분)
# 프로덕션: https://your-domain.com,https://api.your-domain.com
ALLOWED_ORIGINS=http://localhost:3004,http://localhost:3006

# Windmill 워크플로우 연동
WINDMILL_CALLBACK_SECRET=your-windmill-secret-here

# 개발 환경 설정
USE_HTTPS=false
